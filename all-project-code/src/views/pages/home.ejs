<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
    <div class="container">
        <section class="hero-section">
            <h1>Welcome to Boulder Catalog</h1>
            <p>Discover top-rated services in your area.</p>
            <a href="/services" class="cta-button">Browse Services</a>
        </section>

        <section class="popular-categories">
            <h2>Popular Categories</h2>
            <ul>
                <li><a href="/category/1">Interior</a></li>
                <li><a href="/category/2">Exterior</a></li>
                <li><a href="/category/3">Lawn &amp; Garden</a></li>
            </ul>
        </section>

        <section class="search-bar">
            <p>Discover top-rated services in Boulder.</p>
            <form action="/search" method="GET">
                <input type="text" name="query" placeholder="Search for services">
                <button type="submit">Search</button>
            </form>
        </section>

        <!-- form for submitting orders -->
        <form action="/place-order" method="POST">
            <label for="service">Select a Service:</label>
            <select name="service_id" id="service" required>
                <% for (const service of servicesData) { %>
                    <option value="<%= service.service_id %>"><%= service.name %></option>
                <% } %>
            </select>

            <label for="quantity">Quantity:</label>
            <input type="number" name="quantity" id="quantity" placeholder="Enter quantity" required>

            <button type="submit">Place Order</button>
        </form>

        <!-- form for adding services -->
        <form action="/add-service" method="POST">
            <label for="serviceName">Service Name:</label>
            <input type="text" name="serviceName" id="serviceName" placeholder="Enter service name" required>

            <label for="serviceDescription">Service Description:</label>
            <textarea name="serviceDescription" id="serviceDescription" placeholder="Enter service description" required></textarea>

            <label for="serviceCost">Service Cost:</label>
            <input type="number" name="serviceCost" id="serviceCost" placeholder="Enter service cost" required>

            <!-- Add more fields as needed -->

            <button type="submit">Add Service</button>
        </form>
        <div class="container">
    
            <section class="add-business">
                <h2>Add Your Business</h2>
                
                <a href="/businessadd" class="cta-button">Add Business</a>
            </section>
        </div>

    </div>
</main>

<%- include ('../partials/footer') %>
